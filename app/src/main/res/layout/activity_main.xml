<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/darkGrey"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/inputTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/resultTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textSize="50sp"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/inputTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            style="@style/buttonRow">

            <Button
                android:id="@+id/button_opBracket"
                style="@style/buttonNumber"
                android:text="("/>
            <Button
                android:id="@+id/button_clBracket"
                style="@style/buttonNumber"
                android:text=")"/>
            <Button
                android:id="@+id/div_btn"
                style="@style/buttonOperator"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            style="@style/buttonRow">

            <Button
                android:id="@+id/seven_btn"
                style="@style/buttonNumber"
                android:text="7"/>
            <Button
                android:id="@+id/eight_btn"
                style="@style/buttonNumber"
                android:text="8"/>
            <Button
                android:id="@+id/nine_btn"
                style="@style/buttonNumber"
                android:text="9"/>
            <Button
                android:id="@+id/mul_btn"
                style="@style/buttonOperator"
                android:text="X" />

        </LinearLayout>

        <LinearLayout
            style="@style/buttonRow">

            <Button
                android:id="@+id/four_btn"
                style="@style/buttonNumber"
                android:text="4"/>
            <Button
                android:id="@+id/five_btn"
                style="@style/buttonNumber"
                android:text="5"/>
            <Button
                android:id="@+id/six_btn"
                style="@style/buttonNumber"
                android:text="6"/>
            <Button
                android:id="@+id/min_btn"
                style="@style/buttonOperator"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            style="@style/buttonRow">

            <Button
                android:id="@+id/one_btn"
                style="@style/buttonNumber"
                android:text="1"/>
            <Button
                android:id="@+id/two_btn"
                style="@style/buttonNumber"
                android:text="2"/>
            <Button
                android:id="@+id/three_btn"
                style="@style/buttonNumber"
                android:text="3"/>

            <Button
                android:id="@+id/plus_btn"
                style="@style/buttonOperator"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            style="@style/buttonRow">

            <Button
                android:id="@+id/clear_btn"
                style="@style/buttonOperator"
                android:text="C"/>
            <Button
                android:id="@+id/zero_btn"
                style="@style/buttonNumber"
                android:text="0"/>
            <Button
                android:id="@+id/equals_btn"
                style="@style/buttonOperator"
                android:textSize="30sp"
                android:layout_weight="2"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>
</layout>
